@article{qin_uav-based_2022,
	title = {{UAV}-{Based} {Multi}-{Temporal} {Thermal} {Imaging} to {Evaluate} {Wheat} {Drought} {Resistance} in {Different} {Deficit} {Irrigation} {Regimes}},
	volume = {14},
	copyright = {http://creativecommons.org/licenses/by/3.0/},
	issn = {2072-4292},
