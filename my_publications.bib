	journal = {Remote Sensing},
	author = {Yu, Kang and Leufen, Georg and Hunsche, Mauricio and Noga, Georg and Chen, Xinping and Bareth, Georg},
	year = {2014},
	note = {00003},
	keywords = {blue to far-red fluorescence ratio, leaf chlorophyll concentration, barley, precision agriculture, reflectance indices, cereal disease},
