	author = {Anderegg, Jonas and Yu, Kang and Aasen, Helge and Walter, Achim and Liebisch, Frank and Hund, Andreas},
	year = {2020},
	note = {Publisher: Frontiers},
	keywords = {field-based phenotyping, hyperspectral remote sensing, Canopy reflectance, Feature Selection, high-throughput phenotyping},
	file = {Anderegg et al. - 2020 - Spectral Vegetation Indices to Track Senescence Dy.pdf:/Users/kang/Zotero/storage/WCLSKAJT/Anderegg et al. - 2020 - Spectral Vegetation Indices to Track Senescence Dy.pdf:application/pdf},
