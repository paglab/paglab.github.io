@article{li_spectroscopic_2021,
	title = {Spectroscopic estimation of {N} concentration in wheat organs for assessing {N} remobilization under different irrigation regimes},
	volume = {12},
	copyright = {All rights reserved},
	issn = {1664-462X},
	url = {https://www.frontiersin.org/articles/10.3389/fpls.2021.657578/abstract},
	doi = {10.3389/fpls.2021.657578},
	abstract = {Nitrogen (N) remobilization is a critical process that provides substantial N to winter wheat grains for improving yield productivity. Here, the remobilization of N from anthesis to maturity in two wheat cultivars under three irrigation regimes was measured and its relationship to organ N concentration was examined. Based on spectral data of organ powder samples, partial least squares regression (PLSR) models were calibrated to estimate N concentration (Nmass) and validated against with laboratory-based measurements. Although spectral reflectance could accurately estimate Nmass, the PLSR-based Nmass-spectra predictive model was found to be organ-specific, organs at the top canopy (chaff and top three leaves) received the best predictions (R2 {\textgreater}0.88). In addition, N remobilization efficiency (NRE) in the top two leaves and top third internode was highly correlated with its corresponding N concentration change (ΔNmass) with a R2 of 0.90. ΔNmass of the top first internode (TIN1) explained 78\% variation of the whole-plant NRE. This study provides a proof of concept for estimating N concentration and assessing N remobilization using hyperspectral data of individual organs, which offers a non-chemical and low-cost approach to screen germplasms for an optimal NRE in drought-resistance breeding.},
	language = {English},
	urldate = {2021-03-25},
	journal = {Frontiers in Plant Science},
	author = {Li, Wei and Zhou, Xiaonan and Yu, Kang and Zhang, Zhen and Liu, Yang and Hu, Naiyue and Liu, Ying and Yao, Chunsheng and Yang, Xiaoguang and Wang, Zhimin and Zhang, Yinghua},
	month = apr,
	year = {2021},
	note = {Publisher: Frontiers},
	keywords = {PLSR, winter wheat, hyperspectral, N concentration, N remobilization efficiency, plant organ reflectance},
	file = {Li et al. - 2021 - Spectroscopic estimation of N concentration in whe.pdf:/Users/kang/Zotero/storage/644PGZF2/Li et al. - 2021 - Spectroscopic estimation of N concentration in whe.pdf:application/pdf},
